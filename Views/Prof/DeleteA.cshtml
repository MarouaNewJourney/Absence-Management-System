@model Absence.Models.Abse

<form method="post" asp-action="DeleteAb">
    <input asp-for="Id" hidden />
    <div class="border p-3">
       
        <div class="form-group row">
            <h2 class="text-info pl-3">Delete Absence</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" disabled class="form-control" />
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Date"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Date" disabled class="form-control" />
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-danger w-100" value="Delete" />
                        </div>
                        <div class="col">
                            <a asp-action="ProfDash" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>

</form>

<a asp-controller="Prof" asp-action="DeleteAbsence" class="btn btn-info mt-4">Back</a>

