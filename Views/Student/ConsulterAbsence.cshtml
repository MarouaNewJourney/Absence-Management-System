@model IEnumerable<Absence.Models.Abse>


@{
    ViewData["Title"] = "Consulter Absence";
}

<h1 class="text-center mt-4" style ="color: #6c63ff;">Liste Absences</h1>

<div class="container mt-4">

	 @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Nom Absence
                    </th>
                    <th>
                        Date
                    </th>
                    <th>
                        Justification
                    </th>
                    <th>
                        Details
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var obj in Model)
                {
                <tr>
                    <td width="50%">@obj.Name</td>
                    <td width="30%">@obj.Date</td>
                    <td>@obj.IsJustified</td>
                    <td>
                        <a asp-controller="Student" asp-route-Id="@obj.Id" asp-action="AbsenceDetail" class="btn btn-success mx-2">
                                Voir Plus
                            </a>
                    </td>

                </tr>
                }
            </tbody>
        </table>

        <a asp-controller="Student" asp-action="StudentDash" class="btn btn-warning mt-4">Back</a>

    }
    else
    {
        <p> Zucune Absence pour l'instant.</p>
        <a asp-controller="Student" asp-action="StudentDash" class="btn btn-warning mt-4">Back</a>

    }


</div>